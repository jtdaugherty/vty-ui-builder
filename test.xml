<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE interface SYSTEM "test.dtd">
<collection>
  <interface name="main" normalFg="blue" normalBg="black" focusFg="white" focusBg="blue">
    <vCentered>
      <hCentered>
        <vBox id="flub">
          <fText id="username">foo</fText>
          <fText>bar</fText>
        </vBox>
      </hCentered>
    </vCentered>
    <focusGroup>
      <entry name="flub"/>
    </focusGroup>
  </interface>

  <interface name="other">
    <centered>
      <vBox>
        <hBox>
          <fText><attr fg="red">Enter</attr> <attr fg="green">some</attr> <attr fg="yellow">text:</attr> </fText>
          <edit id="edit1"/>
          <edit id="edit2" contents="flurb"/>
          <button id="button" label="Press Me"/>
          <progressBar completeColor="cyan" incompleteColor="white"/>
        </hBox>
        <vFill char="y"/>
      </vBox>
    </centered>
    <focusGroup>
      <entry name="edit1"/>
      <entry name="edit2"/>
      <entry name="button"/>
    </focusGroup>
  </interface>

  <interface name="dlgIf" normalFg="blue" normalBg="black" focusFg="white" focusBg="blue">
    <dialog id="dlg" title="A dialog!">
      <vBox>
        <fText>Some text in the dialog.</fText>
        <edit id="dlgEdit"/>
      </vBox>
    </dialog>
    <focusGroup>
      <entry name="dlgEdit"/>
      <entry name="dlg"/>
    </focusGroup>
  </interface>

  <interface name="browser">
    <dirBrowser id="b"/>
    <focusGroup>
      <entry name="b"/>
    </focusGroup>
  </interface>
</collection>
